@model BugTracker.Models.BugProperties

@Html.AntiForgeryToken()
<input type="hidden" value="@ViewBag.categoryval" id="categoryval2" name="categoryval" />
<input type="hidden" value="@ViewBag.propertyval" id="propertyval2" name="propertyval" />
<input type="hidden" value="@ViewBag.orderval" id="orderval2" name="orderval" />

<div class="modal fade" id="add-bug" tabindex="-1" role="dialog" aria-labelledby="Add-Bug" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100"><strong>New Bug</strong></h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group col-12">
                    <strong>@Html.LabelFor(m => m.Status, new { @class = "control-label col-12 p-0" })</strong>
                    @Html.EnumDropDownListFor(m => m.Status, new { @class = "form-control col-12" })
                    @Html.ValidationMessageFor(m => m.Status, "", new { @class = "text-danger col-12 p-0" })
                </div>
                <div class="form-group col-12">
                    <strong>@Html.LabelFor(m => m.Description, new { @class = "control-label col-12 p-0" })</strong>
                    @Html.TextAreaFor(m => m.Description, new { maxlength = 140, @class = "form-control col-12", @placeholder = "Enter Bug Description...", style = "height: 90px; resize:none;" })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger col-12 p-0" })
                </div>
                <div class="form-group col-12">
                    <strong>@Html.LabelFor(m => m.ExpectedResult, new { @class = "control-label col-12 p-0" })</strong>
                    @Html.TextAreaFor(m => m.ExpectedResult, new { maxlength = 140, @class = "form-control col-12", @placeholder = "Enter Expected Result...", style = "height: 90px; resize:none;" })
                    @Html.ValidationMessageFor(m => m.ExpectedResult, "", new { @class = "text-danger col-12 p-0" })
                </div>
                <div class="form-group col-12">
                    <strong>@Html.LabelFor(m => m.RealityResult, new { @class = "control-label col-12 p-0" })</strong>
                    @Html.TextAreaFor(m => m.RealityResult, new { maxlength = 140, @class = "form-control col-12", @placeholder = "Enter Real Result...", style = "height: 90px; resize:none;" })
                    @Html.ValidationMessageFor(m => m.RealityResult, "", new { @class = "text-danger col-12 p-0" })
                </div>
                <div class="form-group col-12">
                    <strong>@Html.LabelFor(m => m.OptionalInformation, new { @class = "control-label col-12 p-0" })</strong>
                    @Html.TextAreaFor(m => m.OptionalInformation, new { maxlength = 140, @class = "form-control col-12", @placeholder = "Enter Optional Information...", style = "height: 90px; resize:none;" })
                    @Html.ValidationMessageFor(m => m.OptionalInformation, "", new { @class = "text-danger col-12 p-0" })
                </div>
                <div class="col-12">
                    <p>* Denotes a required field.</p>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn close mr-auto" type="button" style="font-size:16px;" data-dismiss="modal">Cancel</button>
                <button class="btn btn-danger ml-auto" type="submit" value="Submit">Submit</button>
            </div>
        </div>
    </div>
</div>