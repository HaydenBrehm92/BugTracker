@using BugTracker.Models

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", false)

    <link href="~/Assets/css/all.min.css" rel="stylesheet" />
    <link href="~/Assets/css/fontawesome.min.css" rel="stylesheet" />
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css">
    <link href="@Url.Content("~/Content/layoutStyle.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/OpenProjectStyle.css")" rel="stylesheet" type="text/css" />

</head>
<body>
    <nav class="navbar shadow navbar-expand-md fixed-top navbar-light bg-white pt-0">
        <a class="navbar-brand" href="@Url.Action("Index","Home")">
            <img src="~/Content/Logo2_150x47.png" alt="" />
        </a>
        <button class="navbar-toggler" data-toggle="collapse" data-target=".navCollapse"><span class="fa fa-bars" aria-hidden="false"></span></button>
        <div class="collapse navbar-collapse navCollapse">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item p-2" data-toggle="tooltip" data-placement="bottom" title="Open Project">
                    <a href="@Url.Action("OpenProject", "Projects")" class="nav-link p-0"><i class="fa fa-folder-open" id="navOpenProj"></i></a>
                </li>
                <li class="nav-item p-2" data-toggle="tooltip" data-placement="bottom" title="Create New Project">
                    <i class="fa fa-plus" data-toggle="modal" aria-haspopup="true" id="navCreateProj" aria-expanded="false" data-target="#add-project"></i>
                </li>
                @Html.Partial("_LoginPartial")
            </ul>
        </div>
    </nav>

    @Html.Partial("~/Views/Shared/_CreateProjectPartial.cshtml", new CreateNewProject())

    <div id="renderbody">
        @RenderBody()
    </div>

    <div id="footer">
        @RenderSection("footer", required: false)
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.bundle.min.js")" type="text/javascript"></script>
    @RenderSection("scripts", required: false)
</body>
</html>