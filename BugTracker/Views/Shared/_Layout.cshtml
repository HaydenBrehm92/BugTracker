@using BugTracker.Models

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", false)

    <link href="~/Assets/css/all.min.css" rel="stylesheet" />
    <link href="~/Assets/css/fontawesome.min.css" rel="stylesheet" />
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css">
    <link href="@Url.Content("~/Content/layoutStyle.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/OpenProjectStyle.css")" rel="stylesheet" type="text/css" />

</head>
<body>
    <nav class="navbar sha+dow navbar-expand-md fixed-top navbar-light bg-white pt-0">
        <a class="navbar-brand" href="@Url.Action("Index","Home")">
            <img src="~/Content/Logo2_150x47.png" alt="" />
        </a>

        <ul class="navbar-nav ml-auto">
            <li class="dropdown">
                <div class="btn-group mt-1">
                    <div>
                        @Html.ActionLink("Open Project", "OpenProject", "Projects", null, new { @class = "btn btn-danger btn-sm mr-2", @type = "button", @id = "openProject" })
                    </div>

                    <div>
                        @Html.Partial("~/Views/Shared/_CreateProjectPartial.cshtml", new CreateNewProject())
                    </div>
                </div>
            </li>
            @Html.Partial("_LoginPartial")
        </ul>
    </nav>

    <div id="renderbody">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.bundle.min.js")" type="text/javascript"></script>
    @RenderSection("scripts", required: false)
    <script src="@Url.Content("~/Scripts/custom/editcardsScript.js")" type="text/javascript"></script>
</body>
</html>