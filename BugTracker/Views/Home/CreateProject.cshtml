@using BugTracker.Models
@model CreateNewProject

<style>
    #newProjForm {
        background-color: white;
        border-radius: 12px;
        width: 15%;
        min-width: 10%;
    }
    
    
</style>

@using (Html.BeginForm("CreateProject", "Home", FormMethod.Post, new { id = "createNewProj" }))
{
    @Html.AntiForgeryToken()
    <div class="container shadow h-100 " id="newProjForm">
        <div class="row h-100">
            <div class="col-12 text-center">
                <h3 class="mb-0 mt-2 ">Create a New Project</h3>
                <hr/>
            </div>
            
            <div class="form-group text-center col-12">
                @Html.TextBoxFor(model => model.ProjectName, new { @class = "form-control col-12", @id = "Projectname", @placeholder = "Project Name" })
                <small>@Html.ValidationMessageFor(model => model.ProjectName, null, new { @class = "text-danger " })</small>
            </div>
            <div class="form-group col-12 text-center">
                <button type="submit" id="btnCreateProj" class="btn btn-danger btn-block" style="font-size:18px;">Create Project</button>
            </div>
        </div>
    </div>

}

