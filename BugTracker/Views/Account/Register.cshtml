@model BugTracker.Models.RegisterViewModel
@{
    Layout = null;
    ViewBag.Title = "Register";
}

<!DOCTYPE html>
<html>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" />

    <style>
        .card {
            border-width: 2px !important;
            border-style: solid !important;
            border-color: #dc3545;
        }

        html {
            height: 100%;
            width: 100%;
        }

        body {
            height: 100%;
            width: 100%;
            overflow: auto;
            background-color: #F5F5F5;
        }

        .img-responsive {
            display: inline-block;
            max-width: 267px;
            max-height: 101px;
        }

            .img-responsive img {
                max-width: 100%;
                height: auto;
            }
    </style>
</head>
<body>
    @*messing around*@
    <div id="body">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="container d-flex h-100 justify-content-center align-self-center">
                <div class="col-lg-12">
                    <div class="text-center">
                        <img class="img-responsive pb-3 " src="~/Content/Logo2.png" alt="" />
                    </div>
                    <div class="card rounded w-50 shadow bg-white mx-auto">
                        <h3 class="card-header bg-danger pb-2 m-0 text-white text-center">Register</h3>
                        <div class="card-body row">
                            @if (!Html.ViewData.ModelState.IsValid)
                            {
                                <div class="col-12">
                                    <div class="alert alert-danger" id="RegisterAlert">
                                        <a id="linkClose" href="#" class="close">&times; </a>
                                        @Html.ValidationSummary(false)
                                    </div>
                                </div>
                            }
                            <div class="form-group col-12">
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control col-12", @id = "EmailRegister", @placeholder = "Email" })

                                <small>@Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-danger " })</small>
                            </div>
                            <div class="form-group col-12">
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control col-12", @id = "PasswordRegister", @placeholder = "Password" })
                                <small>@Html.ValidationMessageFor(model => model.Password, null, new { @class = "text-danger " })</small>
                            </div>
                            <div class="form-group col-12">
                                @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control col-12", @id = "ConfirmPassword", @placeholder = "Confirm Password" })
                                <small>@Html.ValidationMessageFor(model => model.ConfirmPassword, null, new { @class = "text-danger " })</small>
                            </div>
                            <div class="form-group pt-3 col-12">
                                <button type="submit" id="btnRegister" class="col-12 btn btn-primary btn-block bg-danger border-danger">Register</button>
                            </div>
                            <div class="text-center col-12">
                                <small>
                                    Already have an account?
                                    @Html.ActionLink("Log In", "Login", "Account")
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    @Scripts.Render("~/bundles/jquery")
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
    @Scripts.Render("~/bundles/bootstrap")

    <script>
        $('#linkClose').click(function () {
            $('#RegisterAlert').hide('fade');
        });
    </script>

